             <menu task="check_sobi2">Import from SOBI2 2.9.x</menu>
             <menu task="check_mosdir">Import from mosDirectory 2.2x</menu>
             <menu task="check_gossamerlinks">Import from Gossamer Links</menu> 
             <menu task="check_bookmarks">Import from Bookmarks 2.7</menu> 
             <menu task="check_esyndicate">Import from eSyndicate 2.2</menu> 
