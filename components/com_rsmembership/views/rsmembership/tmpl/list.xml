<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="RSM_LIST_LAYOUT">
		<message>
			<![CDATA[RSM_LIST_LAYOUT]]>
		</message>
	</layout>
	<state>
		<name>RSM_LIST_LAYOUT</name>
		<params addPath="/administrator/components/com_rsmembership/elements">
			<param name="categories" type="membershipcategory" default="" multiple="multiple" label="Categories" description="Categories"></param>
			<param name="show_category" type="radio" default="1" label="RSM_SHOW_CATEGORY" description="RSM_SHOW_CATEGORY_DESC">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="show_headings" type="radio" default="1" label="Table Headings" description="Show/Hide the Table Headings">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="show_pagination" type="list" default="1" label="Pagination" description="Show/Hide Pagination support">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="orderby" type="list" default="" label="Primary Order" description="Order that the items will be displayed in.">
				<option value="">Default</option>
				<option value="title">Title Alphabetical</option>
				<option value="rtitle">Title Reverse-Alphabetical</option>
				<option value="price">Price Ascending</option>
				<option value="rprice">Price Descending</option>
				<option value="order">Ordering</option>
			</param>
		</params>
	</state>
</metadata>
