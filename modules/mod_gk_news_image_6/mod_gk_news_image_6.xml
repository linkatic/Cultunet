		<languages>
   			<language tag="en-GB">language/en-GB.mod_gk_news_image_6.ini</language>
		</languages>
		
		<params>
			
			<param name="@spacer" label="Basic configuration" type="spacer"/>
			
				<param name="moduleclass_sfx" type="text" default="" label="MODULECLASSSUFFIX" description="MODULECLASSSUFFIX_DESC" />
	                
	            <param name="module_id" type="text" default="news_image_6_1" label="MODID" description="MODID_DESC" />
	                
				<param name="group_id" type="sql" default="" label="GROUPID" description="GROUPID_DESC" query="SELECT id AS value, name AS group_id FROM #__gk2_photoslide_groups WHERE plugin = 'GK News Image VI'" />
					
				<param name="module_bg" type="text" default="" label="MODBG" description="MODBG_DESC" />
				
				<param name="start_h" type="text" default="120" label="TEXTBLOCKHEIGHT" description="TEXTBLOCKHEIGHT_DESC" />
			
			<param name="@spacer" label="Text configuration" type="spacer"/>
			
				<param name="show_text_block" type="list" default="1" label="SHOWTEXTBLOCK" description="SHOWTEXTBLOCK_DESC">
					<option value="1">ENABLED</option>
					<option value="0">DISABLED</option>
				</param>
				
				<param name="text_block_opacity" type="text" default="0.45" label="TEXTBLOCKOPACITY" description="TEXTBLOCKOPACITY_DESC" />
				
				<param name="text_block_background" type="list" default="1" label="TEXTBLOCKBG" description="TEXTBLOCKBG_DESC">
					<option value="1">DEFAULT</option>
					<option value="0">OWN</option>
				</param>
				
				<param name="text_block_bgcolor" type="text" default="#000000" label="TEXTBLOCKBGCOLOR" description="TEXTBLOCKBGCOLOR_DESC" />
				
				<param name="clean_xhtml" type="list" default="1" label="XHTML" description="XHTML_DESC">
					<option value="1">ENABLED</option>
					<option value="0">DISABLED</option>
				</param>
				
				<param name="readmore_button" type="list" default="1" label="READMOREBUTTON" description="READMOREBUTTON_DESC">
					<option value="1">ENABLED</option>
					<option value="0">DISABLED</option>
				</param>
				
				<param name="readmore_text" type="text" default="Read more" label="READMORE" description="READMORE_DESC" />
				
				<param name="title_link" type="list" default="1" label="TITLELINK" description="TITLELINK_DESC">
					<option value="1">ENABLED</option>
					<option value="0">DISABLED</option>
				</param>

				<param name="title_limit" type="text" default="40" label="TITLELIMIT" description="TITLELIMIT_DESC" />
				
				<param name="text_limit" type="text" default="100" label="TEXTLIMIT" description="TEXTLIMIT_DESC" />
				
			<param name="@spacer" label="Images configuration" type="spacer"/>

				<param name="tabsbar_width" type="text" default="200" label="TABSBARWIDTH" description="TABSBARWIDTH_DESC" />

				<param name="tabs_amount" type="text" default="10" label="TAMOUNT" description="TAMOUNT_DESC" />
				
				<param name="tabs_per_page" type="text" default="4" label="TPERPAGE" description="TPERPAGE_DESC" />
				
				<param name="tabs_margin" type="text" default="3" label="TMARGIN" description="TMARGIN_DESC" />	
				
				<param name="tabs_position" type="list" default="left" label="THUMBPOS" description="THUMBPOS_DESC">
					<option value="left">LEFT</option>
					<option value="right">RIGHT</option>
				</param>
				
				<param name="tabsbar_margin" type="text" default="5" label="TBARMARGIN" description="TBARMARGIN_DESC" />
				
			<param name="@spacer" label="Animation configuration" type="spacer"/>
				
				<param name="animation_slide_speed" type="text" default="1000" label="SPEED" description="SPEED_DESC" />
				
				<param name="animation_interval" type="text" default="5000" label="INTERVAL" description="INTERVAL_DESC" />
				
				<param name="autoanimation" type="list" default="1" label="AUTOANIMATION" description="AUTOANIMATION_DESC">
					<option value="1">ENABLED</option>
					<option value="0">DISABLED</option>
				</param>
				
				<param name="animation_slide_type" type="list" default="0" label="ANIMATIONTYPE" description="ANIMATIONTYPE">
					<option value="0">OPACITY</option>
					<option value="1">TOP</option>
					<option value="2">LEFT</option>
					<option value="3">BOTTOM</option>
					<option value="4">RIGHT</option>
				</param>
				
				<param name="animation_text_type" type="list" default="0" label="TEXTANIMATION" description="TEXTANIMATION_DESC">
					<option value="0">OPACITY</option>
					<option value="1">NONE</option>
				</param>
				
			<param name="@spacer" label="Interface control" type="spacer"/>

	            <param name="preloading" type="radio" default="1" label="PRELOAD" description="PRELOAD_DESC">
	                <option value="1">ENABLED</option>
	                <option value="0">DISABLED</option>
	            </param>
		</params>
		
        <params group="advanced">
        	
			<param name="@spacer" label="SCRIPTS" decription="" type="spacer"/>
                
	         	<param name="clean_code" type="list" default="1" label="CLEANCODE" description="CLEANCODE_DESC">
					<option value="1">ENABLED</option>
	    			<option value="0">DISABLED</option>
	       		</param>
	                
	         	<param name="useMoo" type="list" default="2" label="USEMOO" description="USEMOO_DESC">
	          		<option value="2">AUTOMATIC</option>
					<option value="1">FORCEENABLED</option>
	    			<option value="0">FORCEDISABLED</option>
	       		</param>
	                
	         	<param name="useScript" type="list" default="2" label="USEJS" description="USEJS_DESC">
	          		<option value="2">AUTOMATIC</option>
					<option value="1">FORCEENABLED</option>
	    			<option value="0">FORCEDISABLED</option>
	       		</param>
	                
	         	<param name="compress_js" type="list" default="1" label="COMPRESS" description="COMPRESS_DESC">
					<option value="1">ENABLED</option>
	    			<option value="0">DISABLED</option>
	       		</param>
       	</params>
</install>