<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5">
	<name>JS Newest Resumes</name>
	<author>Joom Sky</author>
	<creationDate>Oct 29th, 2009</creationDate>
	<copyright>(C) 2009. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ahmad@joomsky.com</authorEmail>
	<authorUrl>www.joomsky.com</authorUrl>
	<version>1.0</version>
	<description>Show newest resumes from JS Jobs database. </description>
	<params>
		<param name="noofresumes" type="text" default="7" label="Display number of resumes" description="Number of resumes to show" />
		<param name="theme" type="list" default="1" label="Theme" description="Select theme of this module">
			<option value="1">JS Jobs Theme</option>
			<option value="2">Template Theme</option>
			<option value="0">No Theme</option>
		</param>

		<param name="title" type="radio" default="1" label="Application Title" description="Show/Hide the application title">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="category" type="radio" default="1" label="Category" description="Show/Hide the category">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="jobtype" type="radio" default="1" label="Work Preference" description="Show/Hide the work preference">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="highesteducation" type="radio" default="1" label="Highest Education" description="Show/Hide the highest education">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="salaryrange" type="radio" default="1" label="Salary Range" description="Show/Hide the salary range">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="experience" type="radio" default="1" label="Experience" description="Show/Hide the experience">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="available" type="radio" default="1" label="Available" description="Show/Hide the available">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>

		<param name="gender" type="radio" default="1" label="Gender" description="Show/Hide the gender">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="nationality" type="radio" default="1" label="Nationality" description="Show/Hide the nationality">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>

		<param name="posteddate" type="radio" default="1" label="Posted" description="Show/Hide the posted date">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="separator" type="radio" default="1" label="Separator" description="Show/Hide the line separator">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>

	</params>
	<files>
	<filename module="mod_newestjsresume">mod_newestjsresume.php</filename>
	</files>
</install>
