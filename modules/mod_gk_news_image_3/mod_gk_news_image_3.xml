<?xml version="1.0" encoding="utf-8"?>
	<install type="module" version="1.5.0">
		<name>Gavick News Image III</name>
		<creationDate>11/03/2009</creationDate>
		<author>Gavick.com</author>
		<copyright>(C) 2008-2009 Gavick.com</copyright>
		<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
		<authorEmail>info@gavick.com</authorEmail>
		<authorUrl>www.gavick.com</authorUrl>
		<version>2.1.1</version>
		<description>INSTALLED</description>
		
		<languages>
   			<language tag="en-GB">language/en-GB.mod_gk_news_image_3.ini</language>
   			<language tag="pl-PL">language/pl-PL.mod_gk_news_image_3.ini</language>
		</languages>
		
		<files>
			<filename module="mod_gk_news_image_3">mod_gk_news_image_3.php</filename>
			<filename module="mod_gk_news_image_3">index.html</filename>
			<filename module="mod_gk_news_image_3">helper.php</filename>
			<filename module="mod_gk_news_image_3">tmpl/index.html</filename>
			<filename module="mod_gk_news_image_3">tmpl/default.php</filename>
			<filename module="mod_gk_news_image_3">tmpl/content.php</filename>
			<filename module="mod_gk_news_image_3">js/mootools.js</filename>
			<filename module="mod_gk_news_image_3">js/engine.js</filename>
			<filename module="mod_gk_news_image_3">js/engine_compressed.js</filename>
			<filename module="mod_gk_news_image_3">js/importer.php</filename>
			<filename module="mod_gk_news_image_3">js/index.html</filename>
			<filename module="mod_gk_news_image_3">css/style.css</filename>
			<filename module="mod_gk_news_image_3">css/load.gif</filename>
			<filename module="mod_gk_news_image_3">css/index.html</filename>
		</files>
		<params>
			
			<param name="Basic configuration" type="spacer"/>
			
			<param name="moduleclass_sfx" type="text" default="" label="MODULECLASSSUFFIX" description="MODULECLASSSUFFIX_DESC" />
                
            <param name="module_id" type="text" default="newsimage3" label="MODID" description="MODID_DESC" />
                
			<param name="group_id" type="sql" default="" label="GROUPID" description="GROUPID_DESC" query="SELECT id AS value, name AS group_id FROM #__gk2_photoslide_groups WHERE plugin = 'GK News Image III'" />
				
			
			<param name="module_bg" type="text" default="" label="MODBG" description="MODBG_DESC" />
			
			
			<param name="Text configuration" type="spacer"/>
			
			<param name="show_text_block" type="radio" default="1" label="SHOWTEXTBLOCK" description="SHOWTEXTBLOCK_DESC">
				<option value="1">ENABLED</option>
				<option value="0">DISABLED</option>
			</param>
			
			<param name="text_block_opacity" type="text" default="0.45" label="TEXTBLOCKOPACITY" description="TEXTBLOCKOPACITY_DESC" />
			<param name="text_block_height" type="text" default="100" label="TEXTBLOCKHEIGHT" description="TEXTBLOCKHEIGHT_DESC" />
			
			<param name="text_block_background" type="radio" default="1" label="TEXTBLOCKBG" description="TEXTBLOCKBG_DESC">
				<option value="1">DEFAULT</option>
				<option value="0">OWN</option>
			</param>
			
			<param name="text_block_bgcolor" type="text" default="#000000" label="TEXTBLOCKBGCOLOR" description="TEXTBLOCKBGCOLOR_DESC" />
			
			<param name="clean_xhtml" type="radio" default="1" label="XHTML" description="XHTML">
				<option value="1">ENABLED</option>
				<option value="0">DISABLED</option>
			</param>
			
			<param name="readmore_button" type="radio" default="1" label="READMOREBUTTON" description="READMOREBUTTON_DESC">
				<option value="1">ENABLED</option>
				<option value="0">DISABLED</option>
			</param>
			
			<param name="readmore_text" type="text" default="Read more" label="READMORE" description="READMORE_DESC" />
			
			<param name="title_link" type="radio" default="1" label="TITLELINK" description="TITLELINK_DESC">
				<option value="1">ENABLED</option>
				<option value="0">DISABLED</option>
			</param>
			
			
			<param name="Images configuration" type="spacer"/>
			
			<param name="tabs_col" type="text" default="4" label="TCOL" description="TCOL_DESC" />
			
			<param name="tabs_row" type="text" default="4" label="TROW" description="TROW_DESC" />
			
			<param name="tabs_margin" type="text" default="5" label="TMARGIN" description="TMARGIN_DESC" />
			
			<param name="tabs_padding" type="text" default="3" label="TPADDING" description="TPADDING_DESC" />
			
			<param name="tabs_border" type="text" default="2" label="TBORDER" description="TBORDER_DESC" />
			
			<param name="Animation configuration" type="spacer"/>
			
			<param name="animation_slide_speed" type="text" default="1000" label="SPEED" description="SPEED" />
			
			<param name="animation_interval" type="text" default="5000" label="INTERVAL" description="INTERVAL_DESC" />
			
			<param name="autoanimation" type="radio" default="1" label="AUTOANIMATION" description="AUTOANIMATION_DESC">
				<option value="1">ENABLED</option>
				<option value="0">DISABLED</option>
			</param>
			
			<param name="animation_slide_type" type="radio" default="0" label="ANIMATIONTYPE" description="ANIMATIONTYPE_DESC">
				<option value="0">OPACITY</option>
				<option value="1">TOP</option>
				<option value="2">LEFT</option>
				<option value="3">BOTTOM</option>
				<option value="4">RIGHT</option>
			</param>
			
			<param name="animation_text_type" type="radio" default="0" label="TEXTANIMATION" description="TEXTANIMATION_DESC">
				<option value="0">OPACITY</option>
				<option value="1">NONE</option>
			</param>
			
			<param name="tabs_position" type="radio" default="left" label="THUMBPOS" description="THUMBPOS_DESC">
				<option value="left">LEFT</option>
				<option value="right">RIGHT</option>
				<option value="bottom">BOTTOM</option>
			</param>
			
			<param name="Tooltips configuration" type="spacer"/>
			
			<param name="tooltips" type="radio" default="1" label="TOOLT" description="TOOLT_DESC">
				<option value="1">ENABLED</option>
				<option value="0">DISABLED</option>
			</param>
			
			<param name="tooltips_anim" type="radio" default="1" label="TOOLTA" description="TOOLTA_DESC">
				<option value="1">ENABLED</option>
				<option value="0">DISABLED</option>
			</param>
			
			<param name="clickable_slides" type="radio" default="1" label="CLICKABLE" description="CLICKABLE_DESC">
                <option value="1">ENABLED</option>
                <option value="0">DISABLED</option>
            </param>
			
			<param name="preloading" type="radio" default="1" label="PRELOAD" description="PRELOAD_DESC">
                <option value="1">ENABLED</option>
                <option value="0">DISABLED</option>
            </param>	
		</params>
		
        <params group="advanced">
                <param name="@spacer" label="SCRIPTS" decription="" type="spacer"/>
                
                <param name="clean_code" type="list" default="1" label="CLEANCODE" description="CLEANCODE_DESC">
						<option value="1">ENABLED</option>
                        <option value="0">DISABLED</option>
                </param>
                
                <param name="useMoo" type="list" default="2" label="USEMOO" description="USEMOO_DESC">
                        <option value="2">AUTOMATIC</option>
						<option value="1">FORCEENABLED</option>
                        <option value="0">FORCEDISABLED</option>
                </param>
                
                <param name="useScript" type="list" default="2" label="USEJS" description="USEJS_DESC">
                        <option value="2">AUTOMATIC</option>
						<option value="1">FORCEENABLED</option>
                        <option value="0">FORCEDISABLED</option>
                </param>
                
                <param name="compress_js" type="list" default="1" label="COMPRESS" description="COMPRESS_DESC">
						<option value="1">ENABLED</option>
                        <option value="0">DISABLED</option>
                </param>
        </params>
</install>