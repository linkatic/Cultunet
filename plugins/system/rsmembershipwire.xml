	<description>RSM_WIRE_PLUGIN_DESC</description>
	<files>
		<filename plugin="rsmembershipwire">rsmembershipwire.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_rsmembershipwire.ini</language>
	</languages>
