 <!DOCTYPE install PUBLIC 
  "-//Joomla! 1.5//DTD plugin 1.0//EN" "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="content">
	<name>Dione Magic Calendar</name>
	<author>DioneSoft Company (http://www.dionesoft.com)</author>
	<creationDate>April 2010</creationDate>
	<copyright>Copyright (C) 2010 DioneSoft Company (http://www.dionesoft.com). All rights reserved.</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>joomladev@dionesoft.com</authorEmail>
    <authorUrl>www.dionesoft.com</authorUrl>
	<version>1.0.3</version>
    <description>PLUGIN_DESCRIPTION</description>	
	<files>
		<filename plugin="dionemagiccalendar">dionemagiccalendar.php</filename>
		
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/readme.html</filename>		
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/readme.txt</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/GPL.txt</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/logo_company.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/product_icon.png</filename>
		
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/js/jquery-1.4.2.min.js</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/js/jquery-ui-1.8.custom.min.js</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/js/jquery.ui.datepicker.js</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/js/jquery.ui.datepicker-de.js</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/js/jquery.ui.datepicker-fr.js</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/js/jquery.ui.datepicker-it.js</filename>
		
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/css/jquery-ui-1.8.custom.css</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/css/jquery.ui.datepicker.css</filename>
		
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-bg_diagonals-thick_18_b81900_40x40.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-bg_diagonals-thick_20_666666_40x40.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-bg_flat_10_000000_40x100.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-bg_glass_65_ffffff_1x400.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-bg_glass_100_f6f6f6_1x400.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-bg_glass_100_fdf5ce_1x400.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-bg_gloss-wave_35_f6a828_500x100.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-bg_highlight-soft_75_ffe45c_1x100.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-bg_highlight-soft_100_eeeeee_1x100.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-icons_228ef1_256x240.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-icons_222222_256x240.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-icons_ef8c08_256x240.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-icons_ffd27a_256x240.png</filename>
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/images/ui-icons_ffffff_256x240.png</filename>
		
		<filename plugin="dionemagiccalendar">/dionemagiccalendar/elements/heading.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_content_dionemagiccalendar.ini</language>
	</languages>	
	
	<params addpath="/plugins/content/dionemagiccalendar/elements">
		<param name="helpinfo" type="text" size="40" label="Help info" description="You can receive more detailed information having opened a file readme.html" default="plugins/content/dionemagiccalendar/readme.html."/>
		
		<param name="showOn" type="list" default="focus" label="Mode of viewing" description="Mode of viewing ('focus' for popup on focus, 'button' for trigger button, or 'both' for either).">
			<option value="focus">Focus</option>
			<option value="button">Button</option>
			<option value="both">Both</option>
		</param>
		
		<param name="lang" type="list" default="en" label="UI language" description="Language of the interface.">
			<option value="en">English</option>
			<option value="de">Deutch</option>
			<option value="fr">French</option>
			<option value="it">Italian</option>
		</param>
		
		<param name="appendText" type="text" default="" label="Append text" size="10" description="Display text following the input box, e.g. showing the format." />
		
		<param name="buttonText" type="text" default="Button text" label="Button text" size="10" description="Text for trigger button." />
		
		<param name="buttonImage" type="text" default="" label="Button image" size="10" description="URL for trigger button image." />
		
		<param name="buttonImageOnly" type="list" default="0" label="Button image only" description="True if the image appears alone, false if it appears on a button.">
			<option value="0">Disable</option>
			<option value="1">Enable</option>
		</param>
		
		<param name="changeMonth" type="list" default="0" label="Change month" description="True if month can be selected directly, false if only prev/next.">
			<option value="0">Disable</option>
			<option value="1">Enable</option>
		</param>
		
		<param name="changeYear" type="list" default="0" label="Change year" description="True if month can be selected directly, false if only prev/next.">
			<option value="0">Disable</option>
			<option value="1">Enable</option>
		</param>
		
		<param name="yearRange" type="text" default="c-10:c+10" label="Year range" size="10" description="Range of years to display in drop-down, either relative to today's year (-nn:+nn), relative to currently displayed year (c-nn:c+nn), absolute (nnnn:nnnn), or a combination of the above (nnnn:-n)." />
		
		<param name="showOtherMonths" type="list" default="0" label="Show other months" description="True to show dates in other months, false to leave blank.">
			<option value="0">Disable</option>
			<option value="1">Enable</option>
		</param>
		
		<param name="selectOtherMonths" type="list" default="0" label="Select other months" description="True to allow selection of dates in other months, false for unselectable.">
			<option value="0">Disable</option>
			<option value="1">Enable</option>
		</param>
		
		<param name="showWeek" type="list" default="0" label="Show week" description="True to show week of the year, false to not show it.">
			<option value="0">Disable</option>
			<option value="1">Enable</option>
		</param>
		
		<param name="shortYearCutoff" type="text" default="+10" label="Short year cutoff" size="10" description="Short year values &lt; this are in the current century, &gt; this are in the previous century, string value starting with '+' for current year + value." />
		
		<param name="numberOfMonths" type="text" default="1" label="Number of months" size="10" description="Number of months to show at a time." />
		
		<param name="showCurrentAtPos" type="text" default="0" label="Show current at pos" size="10" description="The position in multipe months at which to show the current month (starting at 0)." />
		
		<param name="stepMonths" type="text" default="1" label="Step months" size="10" description="Number of months to step back/forward." />
		
		<param name="stepBigMonths" type="text" default="12" label="Step big months" size="10" description="Number of months to step back/forward for the big links." />
		
		<param name="autoSize" type="list" default="0" label="Auto size" description="True to size the input for the date format, false to leave as is.">
			<option value="0">Disable</option>
			<option value="1">Enable</option>
		</param>
	</params>		
</install>