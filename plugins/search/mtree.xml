<install version="1.5" type="plugin" group="search">
	<name>Search - Mosets Tree</name>
	<creationDate>December 2009</creationDate>
	<version>2.1.3</version>
	<copyright>Copyright (C) 2008 - 2009 Mosets Consulting. All rights reserved.</copyright>
    <license>GNU General Public License</license>
	<author>Mosets Consulting</author>
	<authorEmail>mtree@mosets.com</authorEmail>
	<authorUrl>www.mosets.com</authorUrl>
	<description>Enable searching of all listings and categories in Mosets Tree</description>
	<files>
		<filename plugin="mtree">mtree.php</filename>
	</files>
	<languages folder="i18n/front">
		<language tag="en-GB">en-GB.plg_search_mtree.ini</language>
	</languages>
	<administration>
		<languages folder="i18n/back">
			<language tag="en-GB">en-GB.plg_search_mtree.ini</language>
		</languages>
	</administration>
	<params>
		<param name="search_limit" type="text" size="5" default="50" label="Search Limit" description="Number of Search items to return"/>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="search_listing" type="radio" default="1" label="Search Listings">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="search_category" type="radio" default="0" label="Search Categories">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>
